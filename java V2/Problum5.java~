   import javax.swing.JOptionPane;
public class Problum5{
  public static void main(String[] args) {
    double miles;
    double mpg;
    double gallons;
String input = JOptionPane.showInputDialog("enter miles driven:");
miles = Double.parseDouble(input);
 input = JOptionPane.showInputDialog("enter gallons used:");
gallons = Double.parseDouble(input);
mpg=miles/gallons;
JOptionPane.showMessageDialog(null, "the MPG is" + mpg);
  }
}